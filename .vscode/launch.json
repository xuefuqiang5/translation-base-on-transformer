{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Train Transformer",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/train.py",
            "args": [
                "-src_data", "${workspaceFolder}/data/english.txt", 
                "-trg_data", "${workspaceFolder}/data/french.txt", 
                "-src_lang", "en_core_web_sm", 
                "-trg_lang", "fr_core_news_sm"
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false
        }
    ]
}